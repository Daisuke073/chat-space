.SideBer
  .Header
    .HeaderList
      %h3.HeaderList__userName
        = current_user.name
      %ul.HeaderList__iconlist
        %li.HeaderList__icon
          = link_to new_group_path, class: "icon" do
            = icon('far', 'edit')
        %li.HeaderList__icon
          = link_to edit_user_path(current_user), class: "icon" do
            = icon('fas', 'cog')
  .Group
    - current_user.groups.each do |group|
      .GroupList
        = link_to group_messages_path(group) do
          .GroupList__name
            = group.name
          .GroupList__message
            = group.show_last_message